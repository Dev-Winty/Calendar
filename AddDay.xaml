<Window x:Class="Calendar.AddDay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="AddDay" Height="400" Width="300">
    <StackPanel Margin="20">
        <Label FontWeight="Bold" FontSize="20">일정 추가</Label>
        <WrapPanel Orientation="Horizontal">
            <Label>날짜</Label>
            <TextBox Name="addDayDate" Width="150"/>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal">
            <Label>요일</Label>
            <TextBox Name="addDayofWeek" Width="150"/>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal">
            <Label>할 일</Label>
            <TextBox Name="addDayContents" Width="150"/>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal">
            <Label>Row N Column</Label>
            <TextBox Name="addDayRow" Width="70" Margin="0, 0, 10, 0"/>
            <TextBox Name="addDayColumn" Width="70"/>
        </WrapPanel>
        <Button Click="addBtn_Click" Width="90" Height="50" Margin="20" HorizontalAlignment="Right">추가</Button>
    </StackPanel>
</Window>
