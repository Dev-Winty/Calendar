<Window x:Class="Calendar.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="가입하기" Height="400" Width="300">
    <StackPanel Margin="20">
        <Label FontSize="30" FontWeight="Bold">가입</Label>
        <StackPanel Orientation="Horizontal">
            <Label Width="60">이메일</Label>
            <TextBox Name="emailBx" Width="150" MaxLength="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0, 10">
            <Label Width="60">비밀번호</Label>
            <PasswordBox Name="pwdBx" Width="150" MaxLength="16"/>
        </StackPanel>
        <Button HorizontalAlignment="Right" Margin="45, 0" Width="80" Height="40" Click="Button_Click">가입</Button>
    </StackPanel>
</Window>
